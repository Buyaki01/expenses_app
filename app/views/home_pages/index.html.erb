<div class="flex justify-between py-4 bg-blue-500 px-8 mb-10">
  <i class="fa fa-bars text-white text-2xl"></i>
  <h4 class="text-white text-2xl"> Expense Categories </h4>
  <i class="fa fa-search text-white text-2xl"></i>
</div>

<div class="my-4 text-center">
  <%= render 'shared/notice' %>
</div>

<% @home_pages.each_with_index do |category, index| %>
  <div class="md:container md:mx-auto md:mb-5">
    <%= link_to home_page_expenses_path(category.id) do %>
      <div class="flex mx-3 shadow p-1 mb-3 bg-light rounded">
        <% if category.icon.attached? %>
          <div class="w-1/3"> 
            <img width="200" class="w-full" src="<%=(url_for(category.icon))%>" />
          </div>
        <% end %>
        <div class="pl-5 flex items-center justify-between w-2/3">
          <h3 class="md:text-3xl"><%= category.name %> </h3>
          <p class="m-3 d-flex justify-content-end text-lg md:text-4xl"> $<%= @total_amount[index] %> </p>
        </div>
      </div>
    <% end %> 
  </div>
<% end %>
<div class="d-flex justify-content-center mt-5">
  <%=link_to 'Add expense category', new_home_page_path, class: "text-white py-3 bg-green-500 rounded-md text-lg px-6 cursor-pointer" %>
</div>

<%= render 'shared/sign_in_sign_up' %>