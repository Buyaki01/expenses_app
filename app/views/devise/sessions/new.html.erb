<div class="bg-blue-500 py-3 w-full text-center">
  <h2 class="text-white text-xl uppercase">Log in</h2>
</div>

<div class="my-4 text-center">
  <%= render 'shared/notice' %>
</div>

<div class="m-3 pt-24 d-flex flex-column align-items-center">  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mt-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "py-3 px-4 border mb-2" %>
    </div>

    <div class="field mt-3">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "py-3 px-4 border mb-2" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions w-full my-3">
      <%= f.submit "Log in", class: "py-2 text-white text-lg rounded-md bg-blue-500 w-full" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
