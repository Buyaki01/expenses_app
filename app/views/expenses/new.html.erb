<h3 class='d-flex justify-content-center'> Add a new expense </h3>
<div class="d-flex justify-content-center">
  <%= form_with url: home_page_expenses_path, scope: :expense do |form| %>
    <div class="mb-3">
      <%= form.text_field :name, placeholder: 'Please enter the name of your expense', require: true %>
    </div>
    <div class="mb-3"> 
      <%= form.number_field :amount, placeholder: 'Please enter the amount that you spent on this expense', require: true %>
    </div>
    <%= form.submit "Submit", class: "btn btn-primary" %> 
    <button type="button", class="btn btn-primary">
      <%=link_to 'Back', home_page_expenses_path(@home_page_id), class: "text-white text-decoration-none" %>
    </button> 
  <% end %>
</div>